{
  "name": "liminal",
  "version": "1.0.0",
  "engines": {
    "node": "21.7.2",
    "npm": "10.9.0"
  },
  "description": "web-based IDE",
  "main": "index.js",
  "scripts": {
    "install-client": "npm install --prefix client",
    "install-server": "npm install --prefix server",
    "build-client": "npm run build --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client && npm install --prefix server",
    "start": "npm start --prefix server",
    "dev:app": "concurrently --raw \"npm run server\" \"npm run client\"",
    "server": "cd server; nodemon server.js",
    "client": "cd client && npm run start"
  },
  "author": "kelly manson",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^9.0.1"
  }
}
